<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bicycle2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J O I N    U S "
            android:id="@+id/tvHello1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:textSize="30dp"/>


        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:hint="EMAIL"
            android:background="@drawable/line2"
            android:id="@+id/etEmail1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvHello1"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:text="*필수.email형태로 작성하시요"
            android:textColor="#f40303"
            android:id="@+id/size1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etEmail1"

            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:hint="Password"
            android:background="@drawable/line2"
            android:layout_marginTop="19dp"
            android:password="true"
            android:id="@+id/etPassword1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etEmail1"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="17dp"
            android:text="*필수.6~16자 입력하세요 "
            android:textColor="#f40303"
            android:id="@+id/size2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etPassword1"

            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:hint="reconfirm Password"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="60dp"
            android:password="true"
            android:background="@drawable/line2"
            android:id="@+id/etPassword2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etPassword1"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:hint="보호자번호"
            android:layout_marginTop="55dp"
            android:background="@drawable/line2"
            android:id="@+id/number"
            android:layout_alignTop="@+id/etPassword2"
            android:layout_alignStart="@+id/etPassword2" />


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_alignStart="@+id/size2"
            android:background="@color/blue"
            android:backgroundTint="@color/blue"
            android:text="회원가입"
            android:textAlignment="center" />


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnlogingo"
            android:background="@color/blue"
            android:text="로그인화면"
            android:layout_alignBottom="@+id/btnRegister"
            android:layout_alignEnd="@+id/size2"
           />








    </RelativeLayout>
</RelativeLayout>